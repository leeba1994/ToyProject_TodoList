<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toyproject.todolist.repository.UserMapper">

    <insert id="save" parameterType="com.toyproject.todolist.entity.User">
        insert into user_tb
        values(0, #{userName}, #{password}, #{name}, #{email})
    </insert>
    <select id="findUserByUserNameAndPassword" resultType="com.toyproject.todolist.entity.User">
        select
            userId,
            userName,
            password,
            name,
            email
        from
            user_tb
        where
            userName = #{userName} and password = #{password}
    </select>

</mapper>