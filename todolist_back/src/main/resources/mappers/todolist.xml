<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toyproject.todolist.repository.TodolistMapper">
    <insert id="save" parameterType="com.toyproject.todolist.entity.Todolist">
        insert into todolist_tb values(0, #{content}, #{userId}, #{registerDate}, #{checkedState})
    </insert>
    <select id="findTodolistById" resultType="com.toyproject.todolist.entity.Todolist">
        select
            todolistId,
            content,
            userId,
            registerDate,
            checkedState
        from
            todolist_tb
        where
            userId = #{checkedId}
    </select>
</mapper>