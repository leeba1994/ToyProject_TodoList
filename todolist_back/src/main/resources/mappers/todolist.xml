<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toyproject.todolist.repository.TodolistMapper">
    <insert id="save" parameterType="com.toyproject.todolist.entity.Todolist">
        insert into todolist_tb values(0, #{content}, #{registerDate}, #{checkedState})
    </insert>
    <update id="update" parameterType="com.toyproject.todolist.entity.Todolist" >
        update todolist_tb
        set
            checkedState = 1
        where
            todolistId = #{todolistId}
    </update>
    <update id="updateTodolist" parameterType="com.toyproject.todolist.entity.Todolist">
        update todolist_tb
        set
            content = #{content},
            registerDate = #{registerDate}
        where
            todolistId = #{todolistId}
    </update>
    <delete id="deleteTodolist" parameterType="integer" >
        delete
        from
            todolist_tb
        where
            todolistId = #{todolistId}
    </delete>
    <select id="findTodolists" resultType="com.toyproject.todolist.entity.Todolist">
        select
            todolistId,
            content,
            registerDate,
            checkedState
        from
            todolist_tb
    </select>
</mapper>